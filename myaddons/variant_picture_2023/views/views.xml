<odoo>
  <data>
 
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="variant_picture_2023.list">
      <field name="name">variant_picture_2023 list</field>
      <field name="model">product.template.attribute.value</field>
      <field name="inherit_id" ref="product.product_template_attribute_value_view_tree"/>
      <field name="arch" type="xml">
            <field name="html_color" position="after">
            <field name="image" widget="image" class="oe_avatar" options="{'preview_image': 'image_128'}"/>
        </field>
      </field>
    </record>
        <record model="ir.ui.view" id="variant_picture_2023.form">
      <field name="name">variant_picture_2023 form</field>
      <field name="model">product.template.attribute.value</field>
      <field name="inherit_id" ref="product.product_template_attribute_value_view_form"/>
      <field name="arch" type="xml">
            <field name="html_color" position="after">
            <field name="image" widget="image" class="oe_avatar" options="{'preview_image': 'image_128'}"/>
        </field>
      </field>
    </record>
    <record model="ir.ui.view" id="product_attribute_2023_form">
      <field name="name">product_attribute_2023 form</field>
      <field name="model">product.attribute</field>
      <field name="inherit_id" ref="product.product_attribute_view_form"/>
      <field name="arch" type="xml">
            <field name="html_color" position="after">
            <field name="image" widget="image" class="oe_avatar" options="{'preview_image': 'image_128'}"/>
        </field>
      </field>
    </record>




